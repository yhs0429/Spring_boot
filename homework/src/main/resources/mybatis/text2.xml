<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sample.UserMapper">
	
	<select id="userLogin" parameterType="Map" resultType="com.example.sample.UserDTO">
		select *
		from user
		where id = #{id}
		and passwd = #{passwd}
	</select>

</mapper>